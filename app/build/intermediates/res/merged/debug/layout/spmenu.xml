<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d2dbdc">
	
    <!-- Heading column -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="#b0b0b0"
            android:gravity="center"
            android:padding="15dip"
            android:text="Calculate SP Points"
            android:textColor="#000"
            android:textSize="18dp" />
   </TableRow>
         
   <!-- Row 1 -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <EditText
            android:id="@+id/SP_calories"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:hint="Enter Calories"
            android:numeric="decimal"
            android:background="#FFFFFF" >
            <requestFocus />
        </EditText>

        <TextView
            android:text=""
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#cac9c9"
            android:textColor="#000000"
            android:padding="12dip"
            android:gravity="center"/>
    </TableRow>

   <!--  Row 2 -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <EditText
            android:id="@+id/SP_satfat"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:hint="Enter Saturated Fat"
            android:numeric="decimal"
            android:background="#FFFFFF" >
            <requestFocus />
        </EditText>

     <TextView
            android:text=""
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#cac9c9"
            android:textColor="#000000"
            android:padding="12dip"
            android:gravity="center"/>
    </TableRow>

    <!-- Row 3 -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <EditText
            android:id="@+id/SP_sugars"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:hint="Enter Sugars"
            android:numeric="decimal"
            android:background="#FFFFFF" >
            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/SP_points"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#cac9c9"
            android:gravity="center"
            android:padding="12dip"
            android:textSize="15sp"
            android:text=""
            android:textColor="#000000" />
    </TableRow>
                        
    <!-- Row 4 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/SP_protein"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:hint="Enter Protein"
            android:numeric="decimal"
            android:background="#FFFFFF" >
            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/SP_pointsheading"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#cac9c9"
            android:gravity="center"
            android:padding="12dip"
            android:text=""
            android:textSize="15sp"
            android:textColor="#000000" />
    </TableRow>

    <!-- Row 5 -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <EditText
            android:id="@+id/SP_valueper"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:hint="Enter Value Peer"
            android:numeric="decimal"
            android:background="#FFFFFF" >
            <requestFocus />
        </EditText>

        <TextView
            android:text=""
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#cac9c9"
            android:textColor="#000000"
            android:padding="12dip"
            android:gravity="center"/>
    </TableRow>

    <!-- Row 6 -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <EditText
            android:id="@+id/SP_servings"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:hint="Enter Serving"
            android:numeric="decimal"
            android:background="#FFFFFF" >
            <requestFocus />
        </EditText>

     <TextView
            android:text=""
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#cac9c9"
            android:textColor="#000000"
            android:padding="12dip"
            android:gravity="center"/>
     </TableRow>

    <!-- Row 7 - Blank Row -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

     <TextView
            android:id="@+id/SP_errors"
            android:text=""
            android:layout_weight="3"
            android:layout_width="0dp"
            android:background="#d2dbdc"
            android:textColor="#000000"
            android:padding="10dip"
            android:gravity="center"/>
     </TableRow>

    <!-- Bottom Row with Button That spans the Row -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <Button
            android:text="@string/button_text"
            android:layout_weight="2"
            android:id="@+id/SP_calc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>
</TableLayout>

